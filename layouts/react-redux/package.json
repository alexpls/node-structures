    "private"     : true,
    "description" : "For BUILDING, TESTING, LINTING and DEPLOYMENT",

    "scripts": {
        "test"           : "mocha -r babel-register -G -w -R nyan {client,server}/**/*.spec.js",
        "test_client"    : "mocha -r babel-register -G -w -R nyan client/**/*.spec.js",
        "test_server"    : "mocha -r babel-register -G -w -R nyan server/**/*.spec.js",

        "install_client" : "cd ./client && npm install",
        "install_server" : "cd ./server && npm install",

        "build"          : "gulp build",
        "start"          : "gulp start"
    },

    "dependencies": {
